{
  "name": "gravel",
  "version": "",
  "description": "",
  "main": "/src/components/index.js",
  "scripts": {
    "build-prod": "webpack --mode=production",
    "build-dev": "webpack --mode=development",
    "dev": "webpack serve --mode=development",
    "predeploy": "yarn build-prod",
    "deploy": "gh-pages -d dist",
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"src/**/*.scss\" --custom-syntax 'postcss-scss'",
    "stylelint:fix": "stylelint \"src/**/*.scss\" --custom-syntax 'postcss-scss' --fix",
    "test": "yarn editorconfig && yarn stylelint",
    "prepare": "husky install",
    "staged": "lint-staged",
    "ci": "rm -rf node_modules && yarn --frozen-lockfile"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@htmlacademy/editorconfig-cli": "^1.0.0",
    "autoprefixer": "^10.4.8",
    "babel-loader": "^8.2.5",
    "css-loader": "^6.7.1",
    "cssnano": "^5.1.13",
    "gh-pages": "^4.0.0",
    "hamburgers": "^1.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "markdown-it": "^13.0.1",
    "postcss-loader": "^7.0.1",
    "postcss-scss": "^4.0.4",
    "prismjs": "^1.28.0",
    "pug-plugin": "^4.1.1",
    "sass": "^1.54.4",
    "sass-loader": "^13.0.2",
    "stylelint": "^14.11.0",
    "stylelint-order": "^5.0.0",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.10.0"
  },
  "dependencies": {
    "core-js": "^3.22.8"
  },
  "editorconfig-cli": [
    "*.json",
    "src/**/*.{js,scss,pug}"
